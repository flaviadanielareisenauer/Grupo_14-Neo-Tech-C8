<%- include('./partials/head')%>

    <body class="body__admin">
        <!----------------------------------------------------->
        <%- include('./partials/header')%>
            <!------------------------------------------------------->

            <div class="form_container">
                <h2 class="h2-adm">Administración de productos</h2>
                <hr>
                <form action="" method="">
                    <div class="box">
                        <h4>Imagenes</h4>            
                        <div class="imagenes_ad">
            
                            <div class="input-file-container">
                                <input type="file" name="" id="">
                            </div>
                            <div class="input-file-container">
                                <input type="file" name="" id="">
                            </div>
                            <div class="input-file-container">
                                <input type="file" name="" id="">
                            </div>
                            <div class="input-file-container">
                                <input type="file" name="" id="">
                            </div>
                        </div>
                    </div>
            
                    <div class="carga__form">            
                        <div class="box">
                            <h4>Carga de productos</h4>
                            <div class="inputcontainer">
                                <input class="inputstyle" type="text" name="name" placeholder="Producto">
                            </div>
            
                            <div class="inputcontainer">
                                <textarea class="textarea__adm" name="textarea" rows="15"
                                    cols="50">Descripción del producto</textarea>
                            </div>
            
                            <div class="inputcontainer">
                                <select name="categoria" class="inputselect">
                                    <option value="" hidden selected>Categorias</option>
                                    <option value="ofertas">Ofertas</option>
                                    <option value="notebook">Notebook</option>
                                    <option value="computadoras">Computadoras</option>
                                    <option value="celulares">Celulares</option>
                                    <option value="accesorios">Accesorios</option>
                                    <option value="televisores">Televisores</option>
                                    <option value="consolas">Consolas</option>
                                    <option value="combos">Combos</option>
                                    <option value="tablet">Tablet</option>
                                    <option value="impresoras">Impresoras</option>
                                </select>
                            </div>
            
                            <div class="inputcontainer">
                                <select name="subcategoria" class="inputselect">
                                    <option value="" hidden selected>Descuento</option>
                                    <option value="10">10%</option>
                                    <option value="20">20%</option>
                                    <option value="25">25%</option>
                                    <option value="30">30%</option>
                                    <option value="35">35%</option>
                                    <option value="40">40%</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="box">
                            <div class="inputcontainer">
                                <input class="inputstyle" type="text" name="marca" placeholder="Marca">
                            </div>
            
                            <div class="inputcontainer">
                                <input class="inputstyle" type="text" name="codigo" placeholder="Código">
                            </div>
            
                            <div class="inputcontainer">
                                <input class="inputstyle" type="text" name="color" placeholder="Color">
                            </div>
            
                            <div class="inputcontainer">
                                <input class="inputstyle" type="number" name="precio" placeholder="Precio">
                            </div>
            
                            <h4 class="h4__ad">Buscar Producto:</h4>
            
                            <div class="inputcontainer">
                                <input class="inputstyle" type="search" name="busquedacodigo" size="20" maxlength="20"
                                    placeholder="Escribe el codigo aqui...">
                                <input class="inputstyle" type="submit" value="Buscar">
                            </div>
                        </div>
            
                    </div>
                    <div class="buttoncontainer">
                        <button type="editar" class="btn btn-editar">Editar</button>
                        <button type="eliminar" class="btn btn-eliminar">Eliminar</button>
                        <button type="submit" class="btn btn-submit">Guardar</button>
                    </div>
                </form>
            </div>

            <%- include('./partials/footer')%>

    </body>

    </html>