<%- include('../partials/head')%>

    <body class="body__admin">
        <!----------------------------------------------------->
        <%- include('../partials/header')%>
            <!------------------------------------------------------->

            <div class="form_container">
                <h2 class="h2-adm">Administración de productos</h2>
                <hr>
                <form action="/admin/products/create" method="POST" enctype="multipart/form-data">
                    <div class="box ">
                        <h4 class="h4-adm ">Cargar imagenes</h4>
                        <div class="imagenes_ad ">
                            <div class="input-file-container ">
                                <input type="file" name="image" id="" multiple>
                            </div>
                        </div>
                    </div>

                    <div class="carga__form ">
                        <div class="box ">
                            <h4 class="h4-adm ">Carga de productos</h4>
                            <div class="inputcontainer ">
                                <input class="inputstyle " type="text " name="name" placeholder="Producto ">
                            </div>

                            <div class="inputcontainer ">
                                <textarea class="textarea__adm " name="description" rows="15 " cols="50 ">Descripción del producto</textarea>
                            </div>

                            <div class="inputcontainer ">
                                <select name="category" class="inputselect ">
                                    <option value=" " hidden selected>Categorias</option>
                                    <option value="ofertas ">Ofertas</option>
                                    <option value="notebook ">Notebook</option>
                                    <option value="computadoras ">Computadoras</option>
                                    <option value="celulares ">Celulares</option>
                                    <option value="accesorios ">Accesorios</option>
                                    <option value="televisores ">Televisores</option>
                                    <option value="consolas ">Consolas</option>
                                    <option value="combos ">Combos</option>
                                    <option value="tablet ">Tablet</option>
                                    <option value="impresoras ">Impresoras</option>
                                </select>
                            </div>

                            <div class="inputcontainer ">
                                <select name="discount" class="inputselect ">
                                    <option value=" " hidden selected>Descuento</option>
                                    <option value="10 ">10%</option>
                                    <option value="20 ">20%</option>
                                    <option value="25 ">25%</option>
                                    <option value="30 ">30%</option>
                                    <option value="35 ">35%</option>
                                    <option value="40 ">40%</option>
                                </select>
                            </div>
                        </div>

                        <div class="box ">
                            <div class="inputcontainer ">
                                <input class="inputstyle " type="text " name="mark" placeholder="Marca ">
                            </div>

                            <div class="inputcontainer ">
                                <input class="inputstyle " type="text " name="code" placeholder="Código ">
                            </div>

                            <div class="inputcontainer ">
                                <input class="inputstyle " type="text " name="color" placeholder="Color ">
                            </div>

                            <div class="inputcontainer ">
                                <input class="inputstyle " type="number " name="price" placeholder="Precio ">
                            </div>

                            <h4 class="h4-adm ">Buscar Producto:</h4>

                            <div class="inputcontainer ">
                                <input class="inputstyle " type="search " name="busquedacodigo " size="20 " maxlength="20 " placeholder="Escribe el codigo aqui... ">
                                <input class="inputstyle " type="submit " value="Buscar ">
                            </div>
                        </div>

                    </div>
                    <div class="buttoncontainer ">
                        <button type="submit " class="btn btn-submit ">Guardar</button>
                    </div>
                </form>
            </div>

            <%- include('../partials/footer')%>

    </body>

    </html>