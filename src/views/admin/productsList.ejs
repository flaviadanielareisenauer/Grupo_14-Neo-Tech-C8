<!DOCTYPE html>
<html lang="en">



<%- include('../partials/head')%>
    <%- include('../partials/header')%>
        <div class="p-3 text-end">
            <a class="btn-secondary" href="products/create">Agregar producto</a>
        </div>

        <main class="container">


            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th class="column-mobile" scope="col">imagenProducto</th>
                        <th scope="col">Nombre</th>
                        <th class="column-mobile" scope="col">Descripci√≥n</th>
                        <th class="column-mobile" scope="col">precio</th>
                    </tr>
                </thead>
                <style>
                    td {
                        height: 120px;
                    }
                    
                    th {
                        text-align: center;
                    }
                    
                    td div img {
                        width: 100%;
                        height: 100%;
                        object-fit: contain;
                    }
                </style>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <th scope="row">
                                <div>
                                    <%- product.id %>
                                </div>

                            </th>
                            <td class="column-mobile">
                                <div>
                                    <img src="/imagenes/<%= product.image[0] %>" alt="" style="width: 100px; height: 100px;">
                                </div>
                            </td>
                            <td>
                                <div>
                                    <%- product.name %>
                                </div>
                            </td>
                            <td class="column-mobile">
                                <div>
                                    <%- product.description %>
                                </div>

                            </td>
                            <td class="column-mobile">
                                <div> $
                                    <%- product.price %>
                                </div>

                            </td>
                            </td>

                            <td>
                                <a class="btn btn-success" href="products/<%- product.id%>/edit" style="margin: 10px 0;">
                                    <div class="buttons-container">
                                        <div class="btn btn-eliminar">
                                            <i class="far fa-edit"></i>
                                        </div>

                                </a>
                                <form action="products/delete/<%- product.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-eliminar">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                </button>
                                    </div>

                                </form>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </main>
        <%- include('../partials/footer')%>
            <%- include('../partials/scripts.ejs')  %>
                </body>

</html>