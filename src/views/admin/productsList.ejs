<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>

<a href="/">inicio</a>
<main class="container">
    <div class="p-3 text-end">
        <a class="btn btn-secondary" href="/admin/agregarSucursal">Agregar</a>
    </div>

    <table class="table">

        <thead>
            <tr>
                <th scope="col">ID</th>
                <th class="column-mobile" scope="col">imagenProducto</th>
                <th scope="col">Nombre</th>
                <th class="column-mobile" scope="col">Descripci√≥n</th>
                <th class="column-mobile" scope="col">precio</th>
            </tr>
        </thead>
        <style>
            td {
                height: 120px;
            }
            
            th {
                text-align: center;
            }
            
            td div {
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            td div img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }
        </style>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <th scope="row">
                        <div>
                            <%- product.id %>
                        </div>

                    </th>
                    <td class="column-mobile">
                        <div>
                            <img src="/imagenes/<%= product.image[0] %>" alt="" style="width: 100px; height: 100px;">
                        </div>
                    </td>
                    <td>
                        <div>
                            <%- product.name %>
                        </div>
                    </td>
                    <td class="column-mobile">
                        <div>
                            <%- product.description %>
                        </div>

                    </td>
                    <td class="column-mobile">
                        <div> $
                            <%- product.price %>
                        </div>

                    </td>
                    </td>

                    <td>
                        <a class="btn btn-success" href="/admin/editarSucursal/<%= product.id %> " style="margin: 10px 0;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
                        </a>
                        <form action="/admin/eliminarSucursal/<%- product.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                </button>

                        </form>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>
</main>

<%- include('../partials/scripts.ejs')  %>
    </body>

</html>