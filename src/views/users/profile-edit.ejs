<%- include('../partials/head')%>

    <body>
        <%- include('../partials/header')%>
            <main>
            <form action="/user/profile-edit/:id<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data"> 
                <div class="container-avatar">
                    <div class="profile-box">
                        <h4 class="profile-subtitle">Avatar</h4>
                        <div class="avatar">

                        </div>
                        <div class="input-file-containerConfig">
                            <input type="file" name="" id="">
                        </div>
                    </div>

                </div>
                <div class="form-container">
                    <section class="form-register">
                        <h4>Datos de la cuenta</h4>
                        <i class="fas fa-pencil-alt pencil"></i>
                        <hr class="divitionConfig">
                        <input class="controls" type="email" name="nombres " placeholder="Usuario ">
                        <input class="controls" type="password" name="correo " placeholder="Contraseña ">
                    </section>
                    <section class="form-register">
                        <h4>Datos personales</h4>
                        <i class="fas fa-pencil-alt pencil"></i>
                        <hr class="divitionConfig">
                        <input class="controls" type=" text " name="nombres " placeholder="Nombre ">
                        <input class="controls" type="text " name="apellido " placeholder="Apellido ">
                        <input class="controls" type="number" name="correo " placeholder="Documento ">
                        <input class="controls " type="number " name="correo " placeholder="Telefono ">
                    </section>
                    <section class="form-register ">
                        <h4>Datos de envío</h4> <i class="fas fa-pencil-alt pencil"></i>
                        <hr class="divitionConfig">
                        <input class="controls " type=" text " name="calle " placeholder="Calle ">
                        <input class="controls " type="number " name="dirección " placeholder="Numero">
                        <input class="controls " type="text " name="datos " placeholder="Piso ">
                        <input class="controls " type="text " name="datos " placeholder="Dpto ">
                        <input class="controls " type="number " name="dirección " placeholder="Código Postal ">
                        <div class=" input-container ">
                            <select name="provincia " class="input-select ">
                                   <option value=" " hidden selected>Seleccione una provincia</option>
                                   <option value="laRioja ">La Rioja</option>
                                   <option value="chaco ">Chaco</option>
                                   <option value="cordoba ">Córdoba</option>
                                   <option value="misiones ">Misiones</option>
                                   <option value="chubut ">Chubut</option>
                                   <option value="laRioja ">Salta</option>
                                   <option value="chaco ">Santa Cruz</option>
                                   <option value="cordoba ">Entre Ríos</option>
                                   <option value="misiones ">Buenos Aires</option>
                                   <option value="chubut ">Santa Fé</option>
                               </select>
                        </div>
                        <div class="input-container ">
                            <select name="localidad " class="input-select ">
                                    <option value=" " hidden selected>Elija una localidad</option>
                                    <option value="localidad1 ">Localidad1</option>
                                    <option value="localidad2 ">Localidad2</option>
                                    <option value="localidad3 ">Localidad3</option>
                                    <option value="localidad4 ">Localidad4</option>
                                    <option value="localidad5 ">Localidad5</option>
                                </select>
                        </div>
                    </section>
                </div>

                <div class="button-container ">
                    <div class="button ">
                        <p>Enviar</p>
                    </div>
                    <div class="button ">
                        <p>Recargar</p>
                    </div>
                </div>

              <!--  </form> -->              

            </main>
            <%- include('../partials/footer')%>
    </body>